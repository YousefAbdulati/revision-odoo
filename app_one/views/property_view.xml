<odoo>
<record id="property_action" model="ir.actions.act_window">
    <field name="name">Property</field>
    <field name="res_model">property</field>
</record>

<!-- tree view -->
<record id="property_view_tree" model="ir.ui.view">
    <field name="name">property.view.tree</field>
    <field name="model">property</field>
    <field name="arch" type="xml">
        <tree multi_edit="True"  create="1" edit="1" delete="1" class="tasks"   decoration-danger="(is_late)">
            <field name="name" />
            <field name="state" />
            <field name="owner_id" />
            <field name="postcode" />
            <field name="date_availability" optional="1"/>
            <field name="selling_price" />
            <field name="garden" />
            <field name="garden_area" />
            <field name="expected_selling_date" />
            <field name="is_late"  invisible="True" />
        </tree>
    </field>
</record>


<!-- form view -->
<record id="property_view_form" model="ir.ui.view">
    <field name="name">property.view.form</field>
    <field name="model">property</field>
    <field name="arch" type="xml">
        <form create="1" edit="1" delete="1">
            <sheet>
                <header>
                    <button name="set_draft" type="object" class="btn-primary" string="To Draft"
                        invisible="state == 'draft'"/>
                    <button name="set_pending" type="object" class="btn-primary" string="To Pending"
                        invisible="state != 'draft'"/>
                    <button name="set_sold" type="object" class="btn-primary" string="To Sold"
                        invisible="state != 'pending'"/>

                    <field name="state" widget="statusbar"  options="{'clickable':False}"/>
                </header>
                <div class="oe.title">


                    <label for="seq" />
                    <h1>
                        <field name="seq" />
                    </h1>
                    <label for="name" />
                    <h4>
                        <field name="name" />
                    </h4>
                </div>
                <group>
                    <group string="General Info.">
                        <field name="diff" />
                        <field name="postcode" />
                        <field name="date_availability"/>
                        <field name="expected_price"/>
                        <field name="selling_price" />
                        <field name="bedrooms" />
                        <field name="expected_selling_date" />
                        <field name="is_late" invisible="True" />
                    </group>
                    <group string="Additional Info.">
                        <field name="owner_id" />
                        <field name="phone" />
                        <field name="address" />
                        <field name="tag_ids" widget="many2many_tags"/>
                        <field name="facades" />
                        <field name="garage" />
                        <field name="garden" />
                        <field name="garden_area" />
                        <field name="garden_orientation" />
                        
                    </group>
                </group>
                <group>
                    <field name="discription" required="1"/>
                </group>
                <notebook>
                    <page string="Beadrooms">
                    <field name="property_line_ids" >
                        <tree>
                            <field name="description" />
                            <field name="area" />
                        </tree>
                    </field>
                        
                    </page>
                </notebook>

            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" />
                <field name="activity_ids" />
                <field name="message_ids" />
            </div>
        </form>
    </field>
</record>


