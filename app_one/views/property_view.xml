<odoo>
<record id="property_action" model="ir.actions.act_window">
    <field name="name">Property</field>
    <field name="res_model">property</field>
</record>

<!-- tree view -->
<record id="property_view_tree" model="ir.ui.view">
    <field name="name">property.view.tree</field>
    <field name="model">property</field>
    <field name="arch" type="xml">
        <tree multi_edit="True"  create="1" edit="1" delete="1" class="tasks"   decoration-danger="(is_late)">
            <header>
                <button  name="print_xlsx_property_report"   string="Print Excel Report"  type="object"  class="btn-primary" />
            </header>
            <field name="name" />
            <field name="state" />
            <field name="owner_id" />
            <field name="postcode" />
            <field name="date_availability" optional="1"/>
            <field name="selling_price" />
            <field name="garden" />
            <field name="garden_area" />
            <field name="expected_selling_date" />
            <field name="is_late"  invisible="True" />
        </tree>
    </field>
</record>


<!-- form view -->
<record id="property_view_form" model="ir.ui.view">
    <field name="name">property.view.form</field>
    <field name="model">property</field>
    <field name="arch" type="xml">
        <form create="1" edit="1" delete="1">
            <sheet>
                <div name="button_box" class="button_box"> 
                    <button name="open_related_owner" type="object" string="To Owner" icon="fa-user"
                        invisible="not owner_id"/>
                </div>
                <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                <widget name="web_ribbon" title="Sold" bg_color="text-bg-success" invisible="state != 'sold'"/>

                <header>
                    <button name="set_draft" type="object" class="btn-primary" string="To Draft"
                        invisible="state in ('draft','closed')"/>
                    <button name="set_pending" type="object" class="btn-primary" string="To Pending"
                        invisible="state != 'draft'"/>
                    <button name="set_sold" type="object" class="btn-primary" string="To Sold"
                        invisible="state != 'pending'"/>

                    <field name="state" widget="statusbar"  options="{'clickable':False}"/>
                </header>
                <div class="oe.title">


                    <label for="seq" />
                    <h1>
                        <field name="seq" />
                    </h1>
                    <label for="name" />
                    <h4>
                        <field name="name"  readonly="state == 'closed'"/>
                    </h4>
                </div>
                <group>
                    <group string="General Info.">
                        <field name="diff" readonly="state == 'closed'"/>
                        <field name="postcode" readonly="state == 'closed'"/>
                        <field name="date_availability" readonly="state == 'closed'"/>
                        <field name="expected_price" readonly="state == 'closed'"/>
                        <field name="selling_price" readonly="state == 'closed'"/>
                        <field name="bedrooms" readonly="state == 'closed'"/>
                        <field name="expected_selling_date" readonly="state == 'closed'"/>
                        <field name="is_late" invisible="True" />
                    </group>
                    <group string="Additional Info.">
                        <field name="owner_id" readonly="state == 'closed'"/>
                        <field name="phone" readonly="state == 'closed'"/>
                        <field name="address" readonly="state == 'closed'"/>
                        <field name="tag_ids" widget="many2many_tags" readonly="state == 'closed'"/>
                        <field name="facades" readonly="state == 'closed'"/>
                        <field name="garage" readonly="state == 'closed'"/>
                        <field name="garden" readonly="state == 'closed'" />
                        <field name="garden_area" readonly="state == 'closed'" />
                        <field name="garden_orientation" readonly="state == 'closed'" />
                        <field name="active" invisible="True" />
                        
                    </group>
                </group>
                <group>
                    <field name="description" required="1"/>
                </group>
                <notebook>
                    <page string="Beadrooms">
                    <field name="property_line_ids" readonly="state == 'closed'">
                        <tree editable="bottom">
                            <field name="description" />
                            <field name="area" />
                        </tree>
                    </field>
                        
                    </page>
                </notebook>

            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" />
                <field name="activity_ids" />
                <field name="message_ids" />
            </div>
        </form>
    </field>
</record>


<record id="property_closed_action_server" model="ir.actions.server">
    <field name="name">Closed</field>
    <field name="model_id" ref="model_property"/>
    <field name="binding_model_id" ref="model_property"/>
    <field name="state">code</field>
    <field name="code">
        action= records.set_closed()
    </field>
</record>

<record id="property_change_state_action_server" model="ir.actions.server">
    <field name="name">Change_state</field>
    <field name="model_id" ref="model_property"/>
    <field name="binding_model_id" ref="model_property"/>
    <field name="state">code</field>
    <field name="code">
        action= records.change_state_wizard_open()
    </field>
</record>


<!-- search view -->
<record id="property_view_search" model="ir.ui.view">
    <field name="name">property.view.search</field>
    <field name="model">property</field>
    <field name="arch" type="xml">
        <search>
            <!-- search -->
            <field name="name" />
            <field name="postcode" />

            <!-- filter -->
            <filter name="is_garden" string="With Garden" domain="[('garden', '=',True)]" />
            <filter name="is_not_garden" string="Without Garden" domain="[('garden', '=', False)]" />
            <filter name="is_garage" string="With Garage" domain="[('garage', '=', True)]" />

            <!-- group by -->
            <filter name="group_garage" string="Garage" context="{'group_by': 'garage'}" />
            <filter name="group_garden" string="Garden" context="{'group_by': 'garden'}" />

        </search>
    </field>
</record>


<record id="check_selling_date_cron" model="ir.cron">
    <field name="name">Check Selling Date</field>
    <field name="model_id" ref="model_property"/>
    <field name="interval_number">1</field>
    <field name="interval_type">days</field>
    <field name="numbercall">-1</field>
    <field name="state">code</field>
    <field name="code">model.check_expected_selling_date()</field>
    <field name="active">True</field>
</record>


<menuitem
    id="property_menu_items"
    name="Prperties"
    parent="properties_menu"

    action="property_action"
/>
    

</odoo>
