<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="owner_action" model="ir.actions.act_window">
        <field name="name">Owner</field>
        <field name="res_model">owner</field>
    </record>


    <record id="owner_view_tree" model="ir.ui.view">
        <field name="name">owner.view.tree</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="phone" />
                <field name="address" />
            </tree>
        </field>
    </record>

    <record id="owner_view_form" model="ir.ui.view">
        <field name="name">owner.view.form</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="General Info.">
                        <field name="name" />
                        <field name="phone" />
                        <field name="address" />
                        <field name="property_ids" widget="many2many_tags" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem
        id="owners_menu"
        name="Owners"
        action="owner_action"
        parent="configrations_menu"
    />

</odoo>
