<odoo>


    <record id="action_report_property" model="ir.actions.report">
        <field name="name">Property Report</field>
        <field name="model">property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">app_one.report_template_property</field>
        <field name="binding_model_id" ref="model_property"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_template_property">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                    <style>
                            h1 {
                                text-align: center;
                                font-family: Arial, sans-serif;
                                color: #2c3e50;
                            }

                            table {
                                width: 80%;
                                border-collapse: collapse;
                                margin: 0px auto;
                                margin-top: 20px;
                                font-family: Arial, sans-serif;
                            }

                            table thead th {
                                background-color: #3498db;
                                color: white;
                                padding: 10px;
                                text-align: center;
                                font-size: 16px;
                            }

                            table tbody td {
                                border: 1px solid #ddd;
                                padding: 8px;
                                font-size: 14px;
                            }

                            table tbody tr:nth-child(even) {
                                background-color: #f2f2f2;
                            }

                            table tbody tr:hover {
                                background-color: #e1f0ff;
                            }
                        </style>


                        <h1>Property</h1>
                        <table>
                            <thead>
                                <th colspan="4">General Info.</th>
                            </thead>
                            <tbody>
                                <tr>
                                <td>Name</td>
                                <td><t t-esc="o.name" /></td>
                                <td>postcode</td>
                                <td><span t-field="o.postcode" /></td>
                                </tr>
                                <tr>
                                <td>Name</td>
                                <td><t t-esc="o.name" /></td>
                                <td>postcode</td>
                                <td><span t-field="o.postcode" /></td>
                                </tr>
                                <tr>
                                <td>Name</td>
                                <td><t t-esc="o.name" /></td>
                                <td>postcode</td>
                                <td><span t-field="o.postcode" /></td>
                                </tr>
                                <tr>
                                <td>Name</td>
                                <td><t t-esc="o.name" /></td>
                                <td>postcode</td>
                                <td><span t-field="o.postcode" /></td>
                                </tr>
                                <tr>
                                <td>Name</td>
                                <td><t t-esc="o.name" /></td>
                                <td>postcode</td>
                                <td><span t-field="o.postcode" /></td>
                                </tr>
                                <tr>
                                <td>Name</td>
                                <td><t t-esc="o.name" /></td>
                                <td>postcode</td>
                                <td><span t-field="o.postcode" /></td>
                                </tr>
                            </tbody>
                        
                        
                        </table>

                        <table>
                            <title>Beadrooms</title>
                                <thead>
                                    <th colspan="4">Add Info.</th>
                                </thead>
                            <tbody>
                                <t t-foreach="o.property_line_ids" t-as="l">
                                    <tr>
                                        <td>Name</td>
                                        <td><t t-esc="l.description" /></td>
                                        <td>Area</td>
                                        <td><span t-field="l.area" /></td>
                                        </tr>
                                </t>
                            </tbody>
                        
                        
                        </table>
                        
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
